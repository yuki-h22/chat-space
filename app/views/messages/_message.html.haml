.main_center_thread
  .main_center_thread_upper-message
    .main_center_thread_upper-message_name
      = message.user.name
    .main_center_thread_upper-message_date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main_center_thread_lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.imge.url, class: "lower-message__image" if message.image.present?
